<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.corpit.horoscope2017.Activity.HomeActivity"
    android:background="@drawable/homeactivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/framelayout"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="350dp">

    </FrameLayout>

    <ImageView
        app:srcCompat="@drawable/horoscopebanner3"
        android:id="@+id/imageView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_above="@+id/framelayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        app:srcCompat="@drawable/homeicon"
        android:layout_marginBottom="36dp"
        android:id="@+id/imHomeicon"
        android:layout_width="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="40dp" />

    <TextView
        android:text="Home Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:id="@+id/textView7"
        android:textColor="@android:color/holo_red_dark"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imHomeicon"
        android:layout_alignEnd="@+id/imHomeicon"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/menu"
        android:layout_alignTop="@+id/imHomeicon"
        android:layout_centerHorizontal="true"
        android:id="@+id/imLucky"
        android:background="@android:color/transparent" />

    <TextView
        android:text="Lucky Pet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView22"
        android:textColor="@android:color/holo_red_dark" />

    <ImageView
        android:layout_width="100dp"
        app:srcCompat="@drawable/hearticon"
        android:id="@+id/imLove"
        android:layout_height="40dp"
        android:layout_above="@+id/textView22"
        android:layout_toRightOf="@+id/imLucky"
        android:layout_toEndOf="@+id/imLucky"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <TextView
        android:text="Love Horoscope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView25"
        android:textAlignment="center"
        android:layout_below="@+id/imLove"
        android:layout_alignRight="@+id/imLove"
        android:layout_alignEnd="@+id/imLove"
        android:textColor="@android:color/holo_red_dark" />

</RelativeLayout>
